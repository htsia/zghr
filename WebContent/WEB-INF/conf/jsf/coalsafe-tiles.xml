                <!ELEMENT bean (#PCDATA)>
                <!ATTLIST bean
                        classtype CDATA #REQUIRED>
                <!ELEMENT item (#PCDATA)>
                <!ATTLIST item
                        value CDATA #REQUIRED
                        link CDATA #REQUIRED
                        classtype CDATA #IMPLIED
                        icon CDATA #IMPLIED
                        tooltip CDATA #IMPLIED>
